<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/p6"
    android:orientation="vertical"
    tools:context=".addnewspaper">


    android:layout_width="400dp"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/updatenewspapers"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center"
        android:text="@string/addnewspaper"
        android:textColor="#E91E63"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent" />

    <EditText
        android:id="@+id/newspapername1"
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:layout_weight=""
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/newspapername"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="134dp" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="140dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="10"
            android:text="@string/image"
            android:textSize="30sp"
            android:textStyle="bold" />
        />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="152dp"
            android:layout_height="141dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_weight="0"
            tools:srcCompat="@tools:sample/avatars" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"><![CDATA[

        />



        ]]>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="170dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="10"
            android:text="@string/image"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="152dp"
            android:layout_height="141dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_weight="0"
            tools:srcCompat="@tools:sample/avatars" />


    </LinearLayout>
</LinearLayout>